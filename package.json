{
	"name": "react-sprout",
	"version": "1.0.0",
	"description": "",
	"main": "source/index.js",
	"type": "module",
	"scripts": {
		"lint": "eslint source/**/*.*",
		"test:develop": "node --watch --test-concurrency 1 --test ./test/tests/**/test.spec.js",
		"test": "node --test-concurrency 1 --test ./test/tests/**/**/test.spec.js",
		"build": "esbuild --bundle source/index.js --format=esm --outfile=build/index.js --external:react --jsx=automatic --minify --analyze",
		"build-express": "esbuild source/servers/express/index.js --bundle --format=esm --platform=node --outfile=build/express.js --external:express --external:react",
		"develop": "esbuild --bundle source/index.js --format=esm --outfile=build/index.js --external:react --jsx=automatic --sourcemap --analyze --watch",
		"develop-express": "esbuild source/servers/express/index.js --bundle --format=esm --platform=node --outfile=build/express.js --external:express --external:react --sourcemap --analyze --watch",
		"prepare": "npm run build && npm run build-express && cp source/index.d.ts build/index.d.ts"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"esbuild": "^0.19.10",
		"eslint": "^8.56.0",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"prettier": "^3.1.1",
		"puppeteer": "^21.6.1",
		"puppeteer-extra": "^3.3.6",
		"puppeteer-extra-plugin-user-preferences": "^2.4.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"vite": "^5.0.10"
	},
	"dependencies": {
		"http-errors": "github:subhero24/http-errors"
	}
}
